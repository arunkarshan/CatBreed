<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.codereviewtask_jc51.presentation.entity.CatPreview" />
        
        <variable
            name="onClick"
            type="com.example.codereviewtask_jc51.presentation.utils.AdapterClickItemListener" />
    </data>
    <androidx.cardview.widget.CardView

        android:id="@+id/cat_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/card_corner_radius_medium"
        app:cardElevation="4dp"
        android:onClick="@{()-> onClick.onItemClicked(item)}"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_standard_small">

            <ImageView
                android:id="@+id/image_thumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:imageUrl="@{item.picture}"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/breed_name"
                style="@style/TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_standard_medium"
                android:layout_marginTop="@dimen/padding_standard_medium"
                android:gravity="start"
                android:text="@{item.breedName}"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/image_thumb"
                tools:text="Persian cat" />

            <ImageView
                android:id="@+id/image_favorite"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:layout_marginTop="@dimen/padding_standard_xsmall"
                android:layout_marginEnd="@dimen/padding_standard_small"
                android:padding="@dimen/padding_standard_medium_small"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/image_thumb"
                app:layout_constraintTop_toBottomOf="@id/image_thumb"
                app:imageRes="@{item.favouriteImage}"
                app:srcCompat="@drawable/ic_far_heart" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>