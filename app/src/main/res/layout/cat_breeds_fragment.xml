<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".presentation.breeds.CatBreedsFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/padding_standard_xsmall"
        android:paddingTop="@dimen/padding_standard_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/catFact">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/breeds_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/card_corner_radius_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/cat_breed_item" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/catFact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cat_facts_item_height"
        style="@style/SubText"
        android:paddingBottom="@dimen/padding_standard_xsmall"
        android:gravity="center"
        android:textStyle="italic"
        android:ellipsize="marquee"
        android:paddingHorizontal="@dimen/padding_standard_medium"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/primary_color_subdued"
        tools:text="Fun cat fact"/>

</androidx.constraintlayout.widget.ConstraintLayout>